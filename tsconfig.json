{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["packages/**/*"],
  "references": [
    { "path": "./packages/angular-wrapper" },
    { "path": "./packages/react-wrapper" },
    { "path": "./packages/web-components" },
    { "path": "./packages/tokens" }
  ]
}
